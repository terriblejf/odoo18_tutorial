<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Salesperson: </strong>
                            <span t-field="property.salesperson"/>
                            <br></br>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                            <br></br>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                            <separator/>
                        </div>
                        <t t-set="offers" t-value="property.offer_ids"/>
                        <t t-call="estate.offers_table"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_salesperson_properties">
        <t t-foreach="docs" t-as="salesperson">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="salespersom.name"/>
                        </h2>
                        <div>
                            <strong>Salesperson: </strong>
                            <span t-field="salesperson.name"/>
                        </div>
                        <t t-foreach="salesman.property_ids" t-as="property">
                            <span t-field="property.name"/>
                            <br></br>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                            <br></br>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                            <t t-set="offers" t-value="property.offer_ids"/>
                            <t t-call="estate.offers_table"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="offers_table">
        <t t-if="offers">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity (days)</th>
                        <th>Deadline</th>
                        <th>State</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.partner_id.name"/>
                        </td>
                        <td>
                            <span t-field="offer.vality"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <label>there are no offers yet.</label>
        </t>
    </template>
</odoo>